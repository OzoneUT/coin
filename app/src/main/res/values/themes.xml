<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Coin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_400</item>
        <item name="colorSecondaryVariant">@color/amber_400_darker</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Coin.Subheading" parent="Widget.MaterialComponents.TextView">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/light_gray_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Coin.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/amber_400</item>
        <item name="android:drawableTint">@color/blue_primary_darker</item>
        <item name="android:textColor">@color/blue_primary_darker</item>
    </style>
</resources>